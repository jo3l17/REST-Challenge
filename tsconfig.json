{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es5",
      "es6"
    ],
    "outDir": "./dist" ,
    "strict": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node" , 
    "typeRoots": ["@types","./node_modules/@types"], 
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
